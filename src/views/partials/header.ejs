<!------HEADER DESKTOP------>
<div class="container">    
    <header class="desktop">
        <a class="logo" href="/"><img src="/img/logo_B&B.jpg"></a>
        <form action="/search">
            <input type="text" name="search" placeholder="Encuentra lo que estas buscando">
            <button type="submit"><i class="fas fa-search"></i></button>
        </form>
        <% if(typeof usuarioLogueado == 'undefined') { %>
            <nav class="default">
                <ul class="default">
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Registro</a></li>
                    <li><a href="#">Contacto</a></li>
                </ul>
            </nav>
        <% } else { %>
            <nav class="sessionOk">
                <ul class="sessionOk">
                    <li class="perfil"><a class="perfil" href="perfil/<%= usuarioLogueado.id%>">
                        <img class="avatar" src="imgAvatar/<%= usuarioLogueado.avatar %>">
                    </a></li>

                    <li class="contacto"><a class= "contacto" href="/productCart">Carrito</a></li>

                    <li class="cierreSesion">
                        <form action="/logout" method="POST">
                            <button class= "cierreDeSesion">Cerrar sesión</button>
                        </form>
                    </li>
                </ul>
            </nav>
              
            <% } %>
    </header>
</div>
<!------HEADER MOBILE------>
<header class="mobile">
    <div class="headerMobileArriba">
        
        <a href="/" class=logo ><img src="/img/logo_B&B.jpg"></a>
        
        <div class="iconos">
            
            <i id="searchIcon" class="fas fa-search"></i>

            <% if(typeof usuarioLogueado == 'undefined') { %>
            <a href="/login" class="userIcon"><i class="far fa-user-circle"></i></a>
            <% } else { %>
            <img id= "imgPerfil" src="imgAvatar/<%= usuarioLogueado.avatar %>">    
            <% } %>

        </div>

    </div>

    <% if(typeof usuarioLogueado != "undefined"){ %>
        <div class="user" id="user">
            <ul>
                <li class="miperfil"><a href="/perfil/<%= usuarioLogueado.id%>"><button class="misdatos">Mis datos</button></a></li>
                <li class="logOut">
                    <form id="userLogOut" action="" method="POST">
                        <button id= "logOut" class= "cierreDeSesion">Cerrar sesión</button>
                    </form>
                </li>
            </ul>
        </div>
    <% } %>

    <form id="searchBar" action="/search">
        <input type="text" name="search" id="search" placeholder="Encuentra lo que estas buscando">
        <button type="submit"><i class="fas fa-search"></i></button>
    </form>
</header>