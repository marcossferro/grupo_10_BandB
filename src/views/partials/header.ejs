<!------HEADER DESKTOP------>
<div class="container">    
    <header class="desktop">
        <a class="logo" href="/"><img src="/img/logo_B&B.jpg"></a>
        <form action="" method="">
            <input type="text" name="Search" placeholder="Encuentra tu próximo Aire Acondicionado"><button type="submit"><i class="fas fa-search"></i></button>
        </form>
        <% if(typeof usuarioLogueado == 'undefined') { %>
            <nav>
                <ul>
                    <li><a href="login">Login</a></li>
                    <li><a href="register">Registro</a></li>
                    <li><a href="#">Contacto</a></li>
                </ul>
            </nav>
        <% } else { %>
            <nav>
                <ul>
                    <a href="/perfil/<%= usuarioLogueado.id%>"><li><%= usuarioLogueado.nombre %>, bienvenido!</li></a>
                    <li><a href="#">Contacto</a></li>
                    <form action="" method="POST">
                        <button class= "cierreDeSesion" onclick="closeSession('<%= usuarioLogueado.id %>')">Cerrar sesión</button>
                    </form>
                </ul>
            </nav>
              
            <% } %>
    </header>
</div>
